<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    %= stylesheet '/css/main.css'
    %#= stylesheet '/css/jHtmlArea/jHtmlArea.css'
    %= javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js'
    %= javascript '/js/main.js'
    %#= javascript '/js/jHtmlArea.min.js'
    %#= javascript '/js/jHtmlArea.ColorPickerMenu.min.js'
    <script>
        /*$(document).ready(function(){
            $("textarea").htmlarea({
                toolbarText: $.extend({}, jHtmlArea.defaultOptions.toolbarText, {}),
                css: "/css/jHtmlArea/jHtmlArea.Editor.css",
                image:'/css/jHtmlArea/jHtmlArea.png',
            });
        });*/
    </script>
    
    <style type="text/css">
        /*div.jHtmlArea .ToolBar ul li a.custom_disk_button 
        {
            background: url('/css/jHtmlArea/jHtmlArea.png') no-repeat;
            background-position: 0 0;
        }*/
    </style>
    
    <meta charset="utf-8">

  </head>
  <body>
    <nav class=overall>
        <div class="alignleft">
            <a href="/news"><%=l 'News list' %></a>
        </div>
        <div class="alignleft">
            <a href="/thread"><%=l 'Forum' %></a>
        </div>
        <div class="alignleft">
            <a href="/thread/tracker"><%=l 'Tracker' %></a>
        </div>
        <div class="alignleft">
            <a href="<%= url_for 'project_list' %>"><%=l 'Projects' %></a>
        </div>
        
        % if ( user->{id} )
        % {
        
            <div class="alignright">
                <a href="<%= url_for 'user_thread' %>">
                    <div class="alignleft <%= user->{responses} ? 'hot-responses' : 'responses' %>">
                        <%= user->{responses} %>
                    </div>
                </a>
                
                <%= render_user(user) %>
            </div>
        
        %
        % } else {
        %
        
            <div class="alignright">
                <a href="<%= url_for('user_login')
                        %>"><%=l 'Login' %></a>
            </div>
        
        %
        % }
        
        % if ( grep { $_ == 1 } @{ user->{groups} } )
        % {
        
            <div class="alignright">
                <a href="/admin"><%=l 'Admin panel' %></a>
            </div>
        
        %
        % }
        
        <div class=cb></div>
    </nav>
    
<div class=wrap>

        
    <table style="width:100%">
        <tr valign=top>
            <td style="width:50%">
                
                <div class=verticalWrap>
                    <nav class=vertical>
        %= content_for 'vertical_nav';
                    </nav>
                </div>
            
            </td>
            <td style="width:800px">

                <div class=contentWrap>
                    <header class=overall>
                      <h1><%= title %></h1>
                    </header>
                            
                            % my $messageType = stash('messageType');
                            % my $message     = stash('message');
                            %
                            % if ( defined $messageType )
                            % {
                                <div class="<%= $messageType %>">
                                    <%=l $message %>
                                </div>
                            % }
                    
                    <article class=content>
                        <%= content %>
                    </article>
                    
                </div>
            
            </td>
            <td style="width:50%">
            </td>
        </tr>
    </table>

</div>

<div class=overallFooter>

    <footer class=overall>
            <small style="color:#888">
                Spaghetti &mdash; forum system for developers<br>
                Current version:
                <acronym title="<%= $Spaghetti::COMMIT %>">
                    <%= $Spaghetti::VERSION %>
                </acronym><br>
                Built with <a href="http://perl.org/">Perl</a><br>
                Powered by <a href="http://lorcode.org/">LorCode</a>
            </small>
    </footer>

</div>

  </body>
</html>
