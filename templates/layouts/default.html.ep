<!DOCTYPE html>
<html>
  <head>
    <title><%=strip title %></title>
    %= stylesheet '/css/main.css'
    %= stylesheet '/js/redactor/css/redactor.css'
    %= javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js'
    %= javascript '/js/main.js'
    %= javascript '/js/redactor/redactor.js'
    <meta charset="utf-8">
    <script type="text/javascript">
        $(document).ready(function(){ $('textarea').each(function(i){ $(this).redactor(); }) });
    </script>
  </head>
  <body>
    <nav class=overall>
        <div class="alignleft">
            <a href="/news"><%=l 'News list' %></a>
        </div>
        <div class="alignleft">
            <a href="/thread"><%=l 'Forum' %></a>
        </div>
        <div class="alignleft">
            <a href="/thread/tracker"><%=l 'Tracker' %></a>
        </div>
        <div class="alignleft">
            <a href="<%= url_for 'project_list' %>"><%=l 'Projects' %></a>
        </div>
        
        % if ( user->{id} )
        % {
        
            <div class="alignright">
                <a href="<%= url_for 'user_responses' %>">
                    <div class="alignleft <%= user->{responses} ? 'hot-responses' : 'responses' %>">
                        <span style="font-weight:400"><%=l 'Responses' %></span>
                            <%= user->{responses} %>
                    </div>
                </a>
                
                <%= render_user(user) %>
            </div>
        
        %
        % } else {
        %
        
            <div class="alignright">
                <a href="<%= url_for('user_login')
                        %>"><%=l 'Login' %></a>
            </div>
        
        %
        % }
        
        % if ( grep { $_ == 1 } @{ user->{groups} } )
        % {
        
            <div class="alignright">
                <a href="/admin"><%=l 'Admin panel' %></a>
            </div>
        
        %
        % }
        
        <div class=cb></div>
    </nav>
    
<div class=wrap>

        
    <table style="width:100%">
        <tr valign=top>
            <td style="width:50%">
                
                <div class=verticalWrap>
                    <nav class=vertical>
        %= content_for 'vertical_nav';
                    </nav>
                </div>
            
            </td>
            <td style="width:800px">

                <div class=contentWrap>
                    <header class=overall>
                      <h1><%=b title %></h1>
                    </header>
                            
                            % my $messageType = stash('messageType');
                            % my $message     = stash('message');
                            %
                            % if ( defined $messageType )
                            % {
                                <div class="<%= $messageType %>">
                                    <%=l $message %>
                                </div>
                            % }
                    
                    <article class=content>
                        <%= content %>
                    </article>
                    
                </div>
            
            </td>
            <td style="width:50%">
            </td>
        </tr>
    </table>

</div>

<div class=overallFooter>

    <footer class=overall>
            <small style="color:#888">
            % if ( $self->req->headers->host =~ /code/i )
            % {
                <table style="width:700px">
                    <tr valign="top">
                        <td style="border-right:1px solid #ccc;width:280px;">
                Spaghetti &mdash; forum system for developers<br>
                Current version:
                <acronym title="<%= $Spaghetti::COMMIT %>">
                    <%= $Spaghetti::VERSION %>
                </acronym><br>
                Built with <a href="http://perl.org/">Perl</a><br>
                Powered by <a href="http://lorcode.org/">LorCode</a>
                        </td>
                        <td>
                            <div id="vkusno">
                                <img src="/pic/vkusno.png" class="alignleft">
                                    <a href="http://www.vkusnoserver.ru/">ВкусноСервер</a>
                                    &mdash; официальный<br> поставщик макаронных изделий
                            </div>
                        </td>
                    <tr>
                </table>
            % }
            % else
            % {
                Spaghetti &mdash; forum system for developers<br>
                Current version:
                <acronym title="<%= $Spaghetti::COMMIT %>">
                    <%= $Spaghetti::VERSION %>
                </acronym><br>
                Built with <a href="http://perl.org/">Perl</a><br>
                Powered by <a href="http://lorcode.org/">LorCode</a>
            % }
            </small>
    </footer>

</div>

  </body>
</html>
