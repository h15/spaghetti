<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    %= stylesheet '/css/main.css'
    %= stylesheet '/css/jHtmlArea/jHtmlArea.css'
    %= javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js'
    %= javascript '/js/main.js'
    %= javascript '/js/jHtmlArea.min.js'
    %= javascript '/js/jHtmlArea.ColorPickerMenu.min.js'
    <script>
        $(document).ready(function(){
            $("textarea").htmlarea({
                toolbarText: $.extend({}, jHtmlArea.defaultOptions.toolbarText, {}),
                css: "/css/jHtmlArea/jHtmlArea.Editor.css",
                image:'/css/jHtmlArea/jHtmlArea.png',
            });
        });
    </script>
    
    <style type="text/css">
        div.jHtmlArea .ToolBar ul li a.custom_disk_button 
        {
            background: url('/css/jHtmlArea/jHtmlArea.png') no-repeat;
            background-position: 0 0;
        }
    </style>
    
    <meta charset="utf-8">

  </head>
  <body>
    <nav class=overall>
        <div class="alignleft">
            <a href="/thread"><%=l 'Forum' %></a>
        </div>
        
        % if ( user->{id} )
        % {
        
            <div class="alignright">
                <%= render_user(user) %>
            </div>
        
        %
        % } else {
        %
        
            <div class="alignright">
                <a href="<%= url_for('user_login')
                        %>"><%=l 'Login' %></a>
            </div>
        
        %
        % }
        
        % if ( grep { $_ == 1 } @{ user->{groups} } )
        % {
        
            <div class="alignright">
                <a href="/admin"><%=l 'Admin panel' %></a>
            </div>
        
        %
        % }
        
        <div class=cb></div>
    </nav>
    
    <header class=overall>
      <h1><%= title %></h1>
    </header>
    
    <article class=content>
        <%= content %>
    </article>
    
    <footer class=overall>
        <div class="aligncenter">
            <small>Powered by <a href="http://lorcode.org/">LorCode</a>.</small>
        </div>
    </footer>
  </body>
</html>
