% layout 'default';
% title l('Edit post');

<div>
    <a href="<%= url_for( 'thread_show', url => $id ) %>"><%=l 'Go to thread' %></a>
    
    <div class="controls alignright">
        <form method=post action="<%= url_for 'admin_news_topicToNews' %>">
            <input type=hidden name=id value='<%= $id %>'>
            <input type=submit value="<%=l 'make news' %>">
        </form>
    </div>
</div>

%=b $form
